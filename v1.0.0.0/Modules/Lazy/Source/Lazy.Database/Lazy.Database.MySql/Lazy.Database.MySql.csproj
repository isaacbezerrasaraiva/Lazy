<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Version>1.0.0</Version>
    <Authors>Isaac Bezerra Saraiva</Authors>
    <Product>Lazy</Product>
    <Description>Lazy Database MySql</Description>
    <Copyright>Copyleft (Í») 2021</Copyright>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <RepositoryUrl>https://github.com/isaacbezerrasaraiva/Lazy</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageOutputPath>$(SolutionDir)..\..\..\Release\.nupkg\</PackageOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\..\..\..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <PropertyGroup Condition="'$(TargetFramework)' == 'netcoreapp3.1'">
    <PostBuildEvent>
      xcopy /y $(SolutionDir)Lazy.Database\Lazy.Database.MySql\bin\Debug\netcoreapp3.1\Lazy.Database.MySql.dll $(SolutionDir)..\..\..\Release\Bin\Lazy.Database.MySql\1.0.0\lib\netcoreapp3.1\
      xcopy /y $(SolutionDir)Lazy.Database\Lazy.Database.MySql\bin\Debug\netcoreapp3.1\Lazy.Database.MySql.dll %SystemDrive%%HomePath%\.nuget\Packages\lazy.database.mysql\1.0.0\lib\netcoreapp3.1\
    </PostBuildEvent>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Lazy" Version="1.0.0" />
    <PackageReference Include="Lazy.Database" Version="1.0.0" />
    <PackageReference Include="MySql.Data" Version="8.0.22" />
  </ItemGroup>

</Project>
